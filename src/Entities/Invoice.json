{
    "name": "Invoice",
    "type": "object",
    "properties": {
      "invoice_number": {
        "type": "string"
      },
      "patient_id": {
        "type": "string"
      },
      "patient_name": {
        "type": "string"
      },
      "patient_email": {
        "type": "string"
      },
      "appointment_id": {
        "type": "string"
      },
      "date": {
        "type": "string",
        "format": "date"
      },
      "due_date": {
        "type": "string",
        "format": "date"
      },
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "quantity": {
              "type": "number"
            },
            "unit_price": {
              "type": "number"
            },
            "total": {
              "type": "number"
            }
          }
        }
      },
      "subtotal": {
        "type": "number"
      },
      "vat": {
        "type": "number",
        "description": "15% VAT"
      },
      "total": {
        "type": "number"
      },
      "status": {
        "type": "string",
        "enum": [
          "Pending",
          "Paid",
          "Overdue",
          "Cancelled"
        ],
        "default": "Pending"
      },
      "payment_method": {
        "type": "string",
        "enum": [
          "Cash",
          "Card",
          "EFT",
          "Medical Aid"
        ]
      },
      "medical_aid_claim": {
        "type": "boolean"
      }
    },
    "required": [
      "patient_name",
      "date",
      "total"
    ]
  }